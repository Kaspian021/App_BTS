<CustomListMDSilver>
    MDListItemLeadingAvatar:
        id: image_music
        source: 'style/image/logo.png'
    
<FixStyleScroll>
    adaptive_height: True
    
    cols: 1
    MDCard:
        id: Card
        pos_hint: {'center_x': .5, 'center_y': 2.1}
        size_hint: (.75, 5)
        style: 'elevated'
        
        
        FitImage:
            size_hint: (.1,1.1)
            source: ''
            id: custom
            radius: '30dp'
            
        
    MDBoxLayout:
        
        pos_hint: {'center_x': .5, 'center_y': .1}
        id: style
        
    
    
        
<Page>:
	hero_to: hero_to
    name: "Page"
	
	FitImage:
        id: image_menu
        source: 'style/image/dark_menu.png'
	
	MDGridLayout:
        cols:1
        
        size_hint: (1,.6)
        
            
        ScrollView:
            pos_hint: {'center_x':.5,'center_y':.5}
            
            MDGridLayout:
                cols: 1
                adaptive_height: True
                pos_hint: {'center_x':.5,'center_y':.5}
                
                id: fix
                   
                
                
                    
                    
            
                    
                
                
                    
                    
                    
				


    
    MDFloatLayout:
		pos_hint: {'center_y': .5}
            
            
        spacing: "40sp"
        padding: "80sp"
        
			

		MDHeroTo:
			id: hero_to
			radius: dp(24)
			size_hint: 1, None
			height: "220sp"
			pos_hint: {"top": 1}
	
		
		MDIconButton:
			pos_hint:{"top": 1}
			icon: 'arrow-left'
			on_release: 
                root.manager.current = "Menu"