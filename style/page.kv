<Page>:
	hero_to: hero_to
    name: "Page"
	
	FitImage:
        id: image_menu
        source: 'style/image/dark_menu.png'
	
	MDBoxLayout:
        
        padding: 30,50
        
        
            
        ScrollView:
            pos_hint: {'center_x':.5,'center_y':.1}
            
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .1}
                
                adaptive_height: True
                
                    
                    
                
        
                    
                        
                FitImage:
                    pos_hint: {'center_x': .5, 'center_y': .01}
                    id: custom
                    source: ''
                    size_hint: 1,5.5
                    radius: ('17sp')
                
                
                    
                    
				


    
    MDFloatLayout:
		pos_hint: {'center_y': .5}
            
            
        spacing: "40sp"
        padding: "20sp"
        
			

		MDHeroTo:
			id: hero_to
			radius: dp(24)
			size_hint: 1, None
			height: "220sp"
			pos_hint: {"top": 1}
	
		
		MDIconButton:
			pos_hint:{"top": 1}
			icon: 'arrow-left'
			on_release: 
                root.manager.current = "Menu"