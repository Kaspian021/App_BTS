#:import arabic_reshaper arabic_reshaper
#:import MDTextFieldPersian style.persian.MDTextFieldPersian
#:import get_display bidi.algorithm.get_display






<HeroItem>:
    imag: image
    id: hero_item
    
    size_hint_y: None
    height: "200dp"
    radius: "24dp"

    MDSmartTile:
        id: tile
        size_hint: None, None
        size: root.size
        on_release: 
            root.on_release()
            

        MDSmartTileImage:
            id: image
            source: root.source
            radius: dp(24)

        MDSmartTileOverlayContainer:
            id: overlay
            md_bg_color: 0, 0, 0, .7
            adaptive_height: True
            padding: "8sp"
            spacing: "8sp"
            radius: [0, 0, sp(24), sp(24)]

            MDLabel:
                text: root.tag
                halign: 'center'
                theme_text_color: "Custom"
                text_color: "white"
                font_style: 'Title'
                role: 'medium'
                adaptive_height: True


<Menu>:
    name: "Menu"
    
    md_bg_color: self.theme_cls.backgroundColor
    
    
    

    FitImage:
        id: image_menu
        source: 'style/image/dark_menu.png'
    
    
    
    ScrollView:

        MDGridLayout:
            id: box
            cols: 1
            spacing: "30sp"
            padding: "80sp"
            adaptive_height: True
            
            
            
            
          
            
    MDFloatLayout:
        
        padding: 0,530
        
        MDTopAppBar:
            type: 'small'
            size_hint_x: 1
            pos_hint: {'center_x':.5,'center_y': .97}
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: 'account-group'
                    on_press: 
                        root.move_about_programmer()
                        app.root.transition.direction= "right"
                        
            
            MDTopAppBarTitle:
                text: 'BTS The Best'
                halign: 'center'
                font_name: 'style/perfect.ttf'
                pos_hint_x: {'center_x': .5}
                font_style: 'Title'
                role: 'medium'
                
                
        MDButton:
                
            pos_hint: {'center_x':.85,'center_y':.92}
            on_release: root.change_color()
            MDButtonText:
                text: '{}'.format(app.theme_cls.theme_style)
                font_style: 'Label'
                role: 'medium'
    
    
                
            
    
            
        
        
        
                    


