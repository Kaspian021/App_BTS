<Programmer>:
	name: 'pro'
	msg: about_text
	md_bg_color: rgba(0,0,0,255)
    
    MDBoxLayout:
        orientation: 'vertical'
        padding:0,0
      
        FitImage:
            source: 'style/image/BtsBg.jpeg'
    
    FitImage:
        source: 'style/image/logo.png'
        size_hint: '.6sp','.45sp'
        pos_hint: {'center_x': .5 , 'center_y': .93}
    
    MDCard:
        pos_hint: {'center_x': .5, 'center_y': .55}
        size_hint: (.7, .65)
        style: 'elevated'
        padding: "16dp"
        
        MDBoxLayout:
            
            orientation: 'vertical'
            adaptive_height: True
            
            MDLabel:
                id: about_text
                text_color: rgba(70,0,150,200)
                text: 
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: self.texture_size[1]
                padding: "8dp", "8dp"
                text_size: self.width, None
                allow_selection: True
                allow_copy: True
			
    MDIconButton:
        icon: 'arrow-right-bold-circle-outline'
        theme_icon_color: "Custom"
        icon_color: 'black'
        style: 'tonal'
        pos_hint: {"center_x": .9, 'center_y': .96}
        on_release: 
			app.root.current= 'Menu'
			app.root.transition.direction= "left"
        